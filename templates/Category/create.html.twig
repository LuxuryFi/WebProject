{% extends "base.html.twig" %}


{% block title %}Create
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.important {
			color: #336699;
		}
	</style>

{% endblock %}
{% block body %}
	<h2 class="alert alert-primary"> <center>Category Create</center></h2>
	<form method="POST" action="{{ path('category_createOne') }}">
		<div class="mb-3">
			<label for="">Category Name</label>
			<input type="text" name="category_name" class="form-control">
		</div>
		<div class="mb-3">
			<label for="">Category Description</label>
			<input type="text" name="category_description" class="form-control">
		</div>
		<div class="mb-3">
			<input type="submit" value="Submit" class="btn btn-primary">
			<input type="reset" value="Clear" class="btn btn-danger">
			<a href="/category/index" class="btn btn-secondary">Back To Home</a>
		</div>
	</form>
{% endblock %}
